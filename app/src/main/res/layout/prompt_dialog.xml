<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size_250"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_16"
    android:background="@drawable/ios_dlg_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="@dimen/size_250"
        android:layout_height="@dimen/size_45"
        android:layout_marginLeft="@dimen/size_15"
        android:gravity="center_vertical"
        android:text="输入设备名"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/word_size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/input_txt"
            android:layout_width="@dimen/size_230"
            android:layout_height="@dimen/size_40"
            android:layout_margin="@dimen/size_10"
            android:gravity="center"
            android:text="sdfsadfsdfasdf"
            android:textColor="@color/color_141414"
            android:textSize="@dimen/word_size_15" />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/color_dcdcdc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_45"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/wifi_cancel"
            android:textColor="@color/color_141414"
            android:textSize="@dimen/word_size_15"
            android:textStyle="bold" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_dcdcdc" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_45"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/color_141414"
            android:textSize="@dimen/word_size_15"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
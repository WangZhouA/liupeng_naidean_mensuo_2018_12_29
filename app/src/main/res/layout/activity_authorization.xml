<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_authorization"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f5f5f9"
    tools:context="com.saiyi.naideanlock.ui.AuthorizationActivity">

    <com.saiyi.naideanlock.topbar.TopToolBar
        android:id="@+id/authorization_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_64"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_marginRight="@dimen/size_15"
        android:gravity="center_vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/authorization_head_iv"
            android:layout_width="@dimen/size_45"
            android:layout_height="@dimen/size_45"
            android:scaleType="centerCrop"
            android:src="@mipmap/home_page_bg"
            app:riv_border_color="@android:color/white"
            app:riv_border_width="@dimen/size_1"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/authorization_admin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_toRightOf="@+id/authorization_head_iv"
            android:text="@string/authorization_admin"
            android:textColor="@color/color_23293e"
            android:textSize="@dimen/word_size_16" />

        <TextView
            android:id="@+id/authorization_admin_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/authorization_admin_tv"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginTop="@dimen/size_10"
            android:layout_toRightOf="@+id/authorization_head_iv"
            android:text="sdfsdf"
            android:textColor="@color/color_a1a1a1"
            android:textSize="@dimen/word_size_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/color_dcdcdc" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/authorization_admin_member_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"/>

</LinearLayout>

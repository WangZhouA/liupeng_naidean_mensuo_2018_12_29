<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_device"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f9"
    android:orientation="vertical"
    tools:context="com.saiyi.naideanlock.ui.AddDeviceActivity">

    <com.saiyi.naideanlock.topbar.TopToolBar
        android:id="@+id/add_device_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_300"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_15"
            android:background="@color/color_f5f5f9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_17"
            android:text="@string/is_searching"
            android:textColor="@color/color_959595"
            android:textSize="@dimen/word_size_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_3"
            android:text="@string/close_phone"
            android:textColor="@color/color_959595"
            android:textSize="@dimen/word_size_15" />

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_20">


            <ImageView
                android:id="@+id/add_ble_device_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ble_bg" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ble_before" />

        </FrameLayout>

        <TextView
            android:id="@+id/add_ble_device_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_15"
            android:text="@string/cancel_binding"
            android:textColor="@color/color_3f424e" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:layout_marginTop="@dimen/size_20"
            android:background="@color/color_e1e1e1"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/add_ble_device_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_48"
    android:paddingLeft="@dimen/size_15"
    android:paddingRight="@dimen/size_15">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/contacts_head_iv"
        android:layout_width="@dimen/size_36"
        android:layout_height="@dimen/size_36"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/home_page_bg"
        app:riv_border_color="@android:color/white"
        app:riv_border_width="@dimen/size_1"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/contacts_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_toRightOf="@+id/contacts_head_iv"
        android:text="@string/authorization_admin"
        android:textColor="@color/color_23293e"
        android:textSize="@dimen/word_size_15" />

    <CheckBox
        android:id="@+id/contacts_check_box"
        android:layout_width="@dimen/size_26"
        android:layout_height="@dimen/size_26"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_add_shared_person"
        android:button="@null"
        android:clickable="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/color_e1e1e1" />
</RelativeLayout>

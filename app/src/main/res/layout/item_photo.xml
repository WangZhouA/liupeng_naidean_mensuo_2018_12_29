<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_48"
    android:orientation="horizontal"
    android:background="@color/color_ffffff"
    android:gravity="center_vertical">
    
    <ImageView
        android:id="@+id/photo_iv"
        android:layout_width="@dimen/size_45"
        android:layout_height="@dimen/size_45"
        android:background="@mipmap/ic_launcher"
        android:layout_marginLeft="@dimen/size_15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo_time"
        android:textColor="@color/color_3f424e"
        android:layout_marginLeft="@dimen/size_15"
        android:textSize="@dimen/word_size_16"/>

    <TextView
        android:id="@+id/photo_data_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_20"
        android:textColor="@color/color_878787"
        android:text="2017.10.27"
        android:textSize="@dimen/word_size_16"/>

    <TextView
        android:id="@+id/photo_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_20"
        android:textColor="@color/color_878787"
        android:text="13:21"
        android:textSize="@dimen/word_size_16"/>
</LinearLayout>
